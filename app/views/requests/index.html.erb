<div class="container">
  <div class="row">
    <br><br>
    <div class="input-field col s3">
      <select multiple>
        <option value="" disabled selected>Location</option>
        <% @all_areas.each do |area| %>
        <option value="<%= area %>"><%= area %></option>
        <% end %>
      </select>
      <label>Filter location</label>
    </div>
    <br>
    <div class="col s3 m3">
      <%= submit_tag 'Search', class: 'btn waves-effect waves-light' %>
    </div>
  </div>

  <div class="row">
    <% @all_requests.each do |request| %>
    <div class="col s12 m6 l3">
      <div class="card hoverable">
        <a href="/requests/<%= request.id %>">
          <span class='div-link'></span>
        </a>
        <div class="card-image">
          <img src="<%= request.image %>">
        </div>
        <div class="card-content">
          <h5><%= request.name %></h5>
          <p><%= request.date.strftime('%d %B %Y (%A)') %></p>
          <p><%= request.start_time.strftime('%I:%M%p') %>
            to
            <%= request.end_time.strftime('%I:%M%p') %></p>
          <p><%= request.area %></p>
        </div>
        <div class="card-action">
          <p><%= request.opening %>
            Openings
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
