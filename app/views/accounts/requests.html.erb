<div class="container">
  <img src="/assets/Logo.png">
  <div class="row">

    <h3 class='mainLeft'>Requests</h3>
    <a href="#" class='mainRight'>See all</a>

    <% @all_requests.each do |request| %>
    <div class="col s3 m3">
      <div class="card hoverable">
        <%#= link_to "single", my_request_path %>
        <a href="/my_requests/<%= request.id %>">

          <span class='div-link'></span>
        </a>
        <div class="card-image">
          <img src="<%= request.image %>">
        </div>
        <div class="card-content">
          <h5><%= request.name %></h5>
          <p><%= request.date.strftime('%d %B %Y (%A)') %></p>
          <p><%= request.start_time.strftime('%I:%M%p') %>
            to
            <%= request.end_time.strftime('%I:%M%p') %></p>
          <p><%= request.area %></p>
        </div>
        <div class="card-action">
          <p><%= request.opening %>
            Openings</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
