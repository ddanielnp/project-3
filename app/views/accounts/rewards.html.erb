<div class="container">

  <img src="/assets/Logo.png">

  <div class="row">

    <h3 class='mainLeft'>Rewards</h3>
    <a href="/rewards" class='mainRight'>See all >></a>

    <% @all_rewards.each do |reward| %>
    <div class="col s3 m3">
      <div class="card hoverable">
        <a href="/rewards/<%= reward.id %>">
          <span class='div-link'></span>
        </a>
        <div class="card-image">
          <img src="<%= reward.image%>">
        </div>
        <div class="card-content">
          <h5><%= reward.name %></h5>
          <p><%= reward.date.strftime('%d %B %Y (%A)') %></p>
          <p><%= reward.start_time.strftime('%I:%M%p') %>
            to
            <%= reward.end_time.strftime('%I:%M%p') %></p>
          <p><%= reward.area %></p>
        </div>
        <div class="card-action">
          <p><%= reward.opening %>
            Openings</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
