<div class="container">

  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="<%= @single_request.image%>">
        </div>
      </div>
    </div>

    <div class="col s12 m6">
      <h3><%= @single_request.name %></h3>
      <p>Date:
        <%= @single_request.date.strftime('%d %B %Y (%A)') %>
        <p>Time:
          <%= @single_request.start_time.strftime('%I:%M%p') %>
          to
          <%= @single_request.end_time.strftime('%I:%M%p') %></p>
        <p>Address:
          <%= @single_request.address %></p>
        <p>Openings:
          <%= @single_request.opening %></p>
        <p>Time Credits:
          <%= @single_request.unit_time_credit %></p>
        <p>By:
          <%= @creator.name %></p>
      </div>
    </div>

    <p><%= @single_request.description %></p>

    <div class="row">

      <% if current_account == @creator %>

      <h4>List of people attending :</h4>

      <table class="highlight">
        <thead>
          <tr>
            <th>Name</th>
            <th>Contact</th>
            <th>Email</th>
          </tr>
        </thead>

        <tbody>
          <% @request_list.each do |list| %>
          <tr>
            <td><%= list.name %></td>
            <td><%= list.tel %></td>
            <td><%= list.email %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>

    </div>
  </div>
