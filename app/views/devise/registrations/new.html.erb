<!-- INDIVIDUAL SIGNUP FORM -->
<div class="container">
  <div class="row">

      <h4 class="input-field col s6 offset-s3">Signup with GiftLoop</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-field col s6 offset-s3">
        <%= f.text_field :name, autofocus: true %>
        <%= f.label :name %><br/>
      </div>

      <div class="input-field col s6 offset-s3">
        <%= f.telephone_field :tel %>
        <%= f.label :tel %><br/>
      </div>

    <div class="input-field col s6 offset-s3">
      <%= f.text_field :identification %>
      <%= f.label :UEN_or_identification_number %><br/>
    </div>

    <div class="file-field input-field col s6 offset-s3">
      <div class="btn">
        <span>Upload image</span>
        <%= f.file_field :verify_image %>
      </div>

      <div class="file-path-wrapper">
        <%= f.text_field :verify_image, class: 'file-path' %>
      </div>
    </div>

    <div class="input-field col s6 offset-s3">
      <%= f.email_field :email %>
      <%= f.label :email %><br/>
    </div>

    <div class="input-field col s6 offset-s3">
      <% if @minimum_password_length %>

      <%= f.password_field :password, autocomplete: "off" %>
      <%= f.label :password_min_6_char %>
      <% end %><br/>
    </div>

    <div class="input-field col s6 offset-s3">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <%= f.label :password_confirmation %><br/>
    </div>

    <%= f.hidden_field(:account_type, :value => params[:account_type]) %>

    <div class="input-field actions col s6 offset-s3">
      <%= f.submit "Submit", class: 'btn waves-effect waves-light right'%>
    </div>
    <% end %>

    <!-- <%= render "devise/shared/links" %> -->
  </div>
</div>
