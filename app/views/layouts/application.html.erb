<!DOCTYPE html>
<html>
  <head>
    <title>Gift Loop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="navbar-fixed">
      <!-- Dropdown Structure -->
      <ul id="dropdown1" class="dropdown-content">
        <li>
          <a href="#!">Update Particulars</a>
        </li>
        <li>
          <a href="/requests/new">Create Request</a>
        </li>
        <li>
          <a href="#!">Requests done</a>
        </li>
        <li>
          <a href="#!">Rewards redeemed</a>
        </li>
      </ul>
      <nav>
        <div class="nav-wrapper">
          <ul id="nav-mobile" class="left hide-on-med-and-down">
            <li>
              <a href="/" class="logo-img"><img src="/assets/Logo.png"></a>
            </li>
            <li class="active">
              <a href="/requests">Requests</a>
            </li>
            <li class="active">
              <a href="/rewards">Rewards</a>
            </li>
          </ul>

          <ul id="nav-mobile" class="right hide-on-med-and-down">

            <!-- Dropdown Trigger -->
            <% if current_account %>
            <li>
              <a class="dropdown-button" href="#!" data-activates="dropdown1">Hello, <%= current_account.name %><i class="material-icons right">arrow_drop_down</i>
              </a>
            </li>

            <li class="active">
              <%= link_to "Logout", destroy_account_session_path, method: :delete %>
            </li>
          <% else %>
            <li class="active">
              <a class="modal-trigger" href="#modal1">Signup</a>
            </li>
            <li class="active">
              <a href="/accounts/sign_in">Login</a>
            </li>
            <% end %>

          </ul>
        </div>
      </nav>
    </div>

    <div id="modal1" class="modal center">
      <div class="modal-content">
        <h4>Sign up as</h4>
        <%= link_to "Individual", "/accounts/sign_up?account_type=individual", class: "btn btn-primary" %>
        <%= link_to "Organisation", "/accounts/sign_up?account_type=organisation", class: "btn btn-primary" %>
      </div>
    </div>

    <!-- devise configuration -->
    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>

    <footer class="page-footer">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text">Contact</h5>
            <div class="foot">
              <ul>
                <li>
                  <i class="small material-icons">location_on</i>
                  <p>8 Claymore Hill</p>
                </li>
                <li>
                  <i class="small material-icons">email</i>
                  <p>admin@giftloop.com</p>
                </li>
              </ul>
            </div>
          </div>
          <div class="col l4 s12">
            <h5 class="white-text">Our Team</h5>
            <ul>
              <li>
                <a class="grey-text text-lighten-3" href="https://github.com/king-of-flab">Nawas</a>
              </li>
              <li>
                <a class="grey-text text-lighten-3" href="https://github.com/ddanielnp">Daniel</a>
              </li>
              <li>
                <a class="grey-text text-lighten-3" href="https://github.com/dreamz89">Jocelyn</a>
              </li>
              <li>
                <a class="grey-text text-lighten-3" href="https://github.com/shumin13">Shumin</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
          @2017 General Assembly WDI 11
        </div>
      </div>
    </footer>

  </body>
</html>
