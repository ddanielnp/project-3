<div class="container">
  <div class="row">
    <div class="section">

      <div class="col s10 offset-s1 formtemplate">
        <br>
        <h4 class="center">Create Reward</h4>
        <%= form_for @new_reward do |f| %>

        <div class="input-field col s8 offset-s2">
          <i class="material-icons prefix">event</i>
          <%= f.text_field :name, required: true %>
          <%= f.label :name %>
        </div>

        <div class="input-field col s8 offset-s2">
          <i class="material-icons prefix">date_range</i>
          <%= f.text_field :date, required: true, class: 'datepicker' %>
          <%= f.label :date %>
        </div>

        <div class="col s8 offset-s2">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">access_time</i>
              <%= f.text_field :start_time, required: true, class: 'timepicker' %>
              <%= f.label :start_time, "Start Time" %>
            </div>

            <div class="input-field col s6">
              <%= f.text_field :end_time, required: true, class: 'timepicker' %>
              <%= f.label :end_time, "End Time" %>
            </div>
          </div>
        </div>

        <div class="col s8 offset-s2">
          <div class="row">
            <div class="input-field col s8">
              <i class="material-icons prefix">location_on</i>
              <%= f.text_field :address, required: true %>
              <%= f.label :address %>
            </div>

            <div class="input-field col s4">
              <%= f.text_field :area, required: true, class: "autocomplete" %>
              <%= f.label :area %>
            </div>
          </div>
        </div>

        <div class="input-field col s8 offset-s2">
          <i class="material-icons prefix">people</i>
          <%= f.number_field :opening, in: 1..500, required: true %>
          <%= f.label :opening, "No. of Openings" %>
        </div>

        <div class="input-field col s8 offset-s2">
          <i class="material-icons prefix">timer</i>
          <%= f.number_field :unit_time_credit, in: 1..50, required: true %>
          <%= f.label :unit_time_credit, "Time Credit Per Pax" %>
        </div>

        <div class="input-field col s8 offset-s2">
          <i class="material-icons prefix">description</i>
          <%= f.text_area :description, required: true, class: 'materialize-textarea' %>
          <%= f.label :description %>
        </div>

        <div class="file-field input-field col s8 offset-s2">
          <div class="btn">
            <span>Image</span>
            <%= f.file_field :image, required: true %>
          </div>

          <div class="file-path-wrapper">
            <%= f.text_field :image, class: 'file-path' %>
          </div>
        </div>

        <div class="input-field col s8 offset-s2">
          <%= f.submit "Create", class: 'btn waves-effect waves-light right formbttn' %>
        </div>

        <% end %>
      </div>

    </div>
  </div>
</div>
