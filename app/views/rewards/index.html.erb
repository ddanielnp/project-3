<div class="container">
  <div class="row">
    <br><br>
    <div class="input-field col s3">
      <select multiple>
        <option value="" disabled selected>Location</option>
        <% @all_areas.each do |area| %>
        <option value="<%= area %>"><%= area %></option>
        <% end %>
      </select>
      <label>Filter location</label>
    </div>
    <br>
    <div class="col s3 m3">
      <%= submit_tag 'Search', class: 'btn waves-effect waves-light' %>
    </div>
  </div>

  <div class="row">
    <% @all_rewards.each do |reward| %>
    <div class="col s12 m6 l3">
      <div class="card hoverable">
        <a href="/rewards/<%= reward.id %>">
          <span class='div-link'></span>
        </a>
        <div class="card-image">
          <img src="<%= reward.image %>">
        </div>
        <div class="card-content">
          <h5><%= reward.name %></h5>
          <p><%= reward.date.strftime('%d %B %Y (%A)') %></p>
          <p><%= reward.start_time.strftime('%I:%M%p') %>
            to
            <%= reward.end_time.strftime('%I:%M%p') %></p>
          <p><%= reward.area %></p>
        </div>
        <div class="card-action">
          <p><%= reward.opening %>
            Openings
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
