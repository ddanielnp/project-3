<div class="container">
  <div class="row">

    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="<%= @current_reward.image%>">
        </div>
      </div>
    </div>

    <div class="col s12 m6">
      <h3><%= @current_reward.name %></h3>
      <p>Date:
        <%= @current_reward.date.strftime('%d %B %Y (%A)') %>
        <p>Time:
          <%= @current_reward.start_time.strftime('%I:%M%p') %>
          to
          <%= @current_reward.end_time.strftime('%I:%M%p') %></p>
        <p>Address:
          <%= @current_reward.address %></p>
        <p>Openings:
          <%= @current_reward.opening %></p>
        <p>Time Credits:
          <%= @current_reward.unit_time_credit %></p>
        <p>By:
          <%= @creator.name %></p>
      </div>
    </div>

    <p><%= @current_reward.description %></p>
    <button class="btn waves-effect waves-light" type="submit" name="action">Redeem
      <i class="material-icons right">redeem</i>
    </button>
  </div>
  <br>
